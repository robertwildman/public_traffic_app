<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDetailSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textAlignment="center" />
    <RadioGroup
        android:id="@+id/rgRoads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbAllRoads"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="All Roads" />
        <RadioButton
            android:id="@+id/rbSelectedRoads"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Select a road" />

    </RadioGroup>
    <LinearLayout
        android:id="@+id/llRoadname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvRoadin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Road Name:" />

        <EditText
            android:id="@+id/etRoadin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rgDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbCT"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Any Date" />
        <RadioButton
            android:id="@+id/rbSelect"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Select Date" />

    </RadioGroup>
    <TableLayout
        android:id="@+id/tlDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:visibility="gone">
        <TableRow>

            <TextView
                android:id="@+id/tvFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date From: " />

            <EditText
                android:id="@+id/etFromDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tvToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date To:" />

            <EditText
                android:id="@+id/etToDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display:" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/cbIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incidents" />

        <CheckBox
            android:id="@+id/cbCurrentRw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Roadworks" />

        <CheckBox
            android:id="@+id/cbPlannedRw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planned Roadworks" />

    </LinearLayout>

    <Button
        android:id="@+id/bSearchSub"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_gravity="center"/>




</LinearLayout>